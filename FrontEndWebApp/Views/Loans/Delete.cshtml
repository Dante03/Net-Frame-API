@model FrontEndWebApp.Models.Prestamo

@{
    ViewBag.Title = "Borrar Prestamo";
}

<h2>Borrar</h2>

<h3>¿Estás seguro que quieres eliminar esto?</h3>
<div>
    <h4>Prestamo</h4>
    <hr />
    <dl class="dl-horizontal">
        @Html.HiddenFor(model => model.Id_Prestamo)

        <dt>
            @Html.DisplayNameFor(model => model.Estudiante.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estudiante.Nombre) @Html.DisplayFor(model => model.Estudiante.Apellido)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Libro.Titulo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Libro.Titulo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Libro.Editorial)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Libro.Editorial)
        </dd>

        <dt>
            @Html.DisplayName("Fecha de prestamo")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fecha_Prestamo)
        </dd>

        <dt>
            @Html.DisplayName("Fecha de devolucion")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fecha_Devuelto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Devuelto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Devuelto)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-default" /> |
            @Html.ActionLink("Regresar", "Index")
        </div>
    }
</div>
